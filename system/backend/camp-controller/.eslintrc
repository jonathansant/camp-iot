{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "ecmaFeatures": {
    "jsx": false,
    "arrowFunctions": true,
    "blockBindings": true,
    "generators": true,
    "let": true
  },

  "rules": {
    "strict": 0,
    "no-underscore-dangle": 0,
    "no-unused-vars": 2,
    "curly": 2,
    "no-multi-spaces": 2,
    "key-spacing": 0,
    "no-return-assign": 0,
    "consistent-return": 0,
    "no-shadow": 0,
    "comma-dangle": 2,
    "no-use-before-define": 0,
    "no-empty": 0,
    "new-parens": 0,
    "no-cond-assign": 0,
    "quotes": [2, "double", "avoid-escape"],
    "camelcase": 0,
    "new-cap": [1, { "capIsNew": false }],
    "no-undef": 2
  },
  "env": {
    "node": true,
    "browser": false
  },
  "globals": {
    "IS_SERVER": true
  }
}